@model IEnumerable<WebQLKhoaHoc.DSNguoiThamGiaBaiBao>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    Danh sách người tham gia bài báo
                </h2>
              
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <div id="datatable_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                    <!-- list component  -->
                    <div class="row">
                        <div class="col-sm-12">
                            <table id="datatable" class="table table-striped table-bordered dataTable no-footer" role="grid" aria-describedby="datatable_info">
                                <thead>
                                    <tr role="row">
                                        <td>Tên bài báo</td>
                                        <td>Tên tác giả</td>
                                        <td>Là tác giả chính</td>                                        
                                        <th>Action</th>
                                    </tr>
                                </thead>

                                <!-- grid nkh  -->
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                    <tr role="row" class="even">
                                        <td>@item.BaiBao.TenBaiBao</td>
                                        <td>
                                            @item.NhaKhoaHoc.HoNKH @item.NhaKhoaHoc.TenNKH
                                        </td>
                                        <td>
                                          @if (item.LaTacGiaChinh == true)
                                          {
                                            @: đúng
                                          }
                                          else
                                          {
                                              @: sai
                                          }
                                        </td>
                                        <td>
                                            
                                            <a href="@Url.Action("EditDanhSachNguoiThamGiaBaiBao", "AdminBaiBao", new {id = item.MaBaiBao,manhakhoahoc = item.MaNKH})">
                                                <i class="far fa-edit"></i>
                                            </a>

                                            <a href="@Url.Action("DeleteDanhSachNguoiThamGiaBaiBao", "AdminBaiBao", new {id = item.MaBaiBao,manhakhoahoc = item.MaNKH })">
                                                <i class="far fa-trash-alt"></i>
                                            </a>
                                            <a href="@Url.Action("CreateDanhSachNguoiThamGiaBaiBao", "AdminBaiBao", new { id = item.MaBaiBao })" data-toggle="tooltip" title="Thêm tác giả">
                                                <i class="fas fa-plus"></i>
                                            </a>

                                        </td>
                                    </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>