@model WebQLKhoaHoc.SachGiaoTrinh

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainPage.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>SachGiaoTrinh</h4>
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.MaSach)

    <div class="form-group">
        @Html.LabelFor(model => model.MaISBN, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.MaISBN)
            @Html.ValidationMessageFor(model => model.MaISBN)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TenSach, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.TenSach)
            @Html.ValidationMessageFor(model => model.TenSach)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaLoai, "MaLoai", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MaLoai", String.Empty)
            @Html.ValidationMessageFor(model => model.MaLoai)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaLinhVuc, "MaLinhVuc", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MaLinhVuc", String.Empty)
            @Html.ValidationMessageFor(model => model.MaLinhVuc)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.MaNXB, "MaNXB", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("MaNXB", String.Empty)
            @Html.ValidationMessageFor(model => model.MaNXB)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.NamXuatBan, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input name="NamXuatBan" id="Fromdate" class="form-control date-picker" type="text" placeholder="Từ thời điểm" value="@Model.NamXuatBan.Value.ToString("d") " autocomplete="off">
        </div>
    </div>

    <div class="modal-footer">
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a href="@Url.Action("Index","SachGiaoTrinhs")" type="button" class="btn btn-danger">Đóng</a>
            </div>
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
