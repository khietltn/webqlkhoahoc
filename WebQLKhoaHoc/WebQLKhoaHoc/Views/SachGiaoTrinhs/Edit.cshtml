@model WebQLKhoaHoc.SachGiaoTrinh

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainPage.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.MaSach)

    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h4 class="modal-title"><span class="glyphicon glyphicon-info-sign"></span> Thông tin sách và giáo trình</h4>
    </div>

    <div class="modal-body">
        <form class="form-horizontal form-label-right">
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12"> Mã ISBN</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.EditorFor(model => model.MaISBN)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Tên Sách</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.EditorFor(model => model.TenSach)
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Loại Sách</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.DropDownList("MaLoai", (IEnumerable<SelectListItem>)ViewBag.MaLoai, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Lĩnh Vực</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.DropDownList("MaLinhVuc", (IEnumerable<SelectListItem>)ViewBag.MaLinhVuc, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Nhà Xuất Bản</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.DropDownList("MaNXB", (IEnumerable<SelectListItem>)ViewBag.MaNXB, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Năm Xuất Bản</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <input name="NamXuatBan" id="Fromdate" class="form-control date-picker" type="text" placeholder="Năm Xuất Bản" value="@Model.NamXuatBan.Value.ToString("d")" autocomplete="off">
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-3 col-sm-3 col-xs-12">Tác Giả</label>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    @Html.EditorFor(model => model.DSTacGias)
                    <input name="DSTacGias" type="text" class="form-control" placeholder="Tác giả" value="@Html.EditorFor(model => model.DSTacGias)">
                </div>
            </div>
        </form>
    </div>
            <div class="modal-footer">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-primary" />
                        <a href="@Url.Action("Index","SachGiaoTrinhs")" type="button" class="btn btn-danger">Đóng</a>
                    </div>
                </div>
            </div>
    </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
