                                                <td><input name="[@indexerct].ThoiGIanKT" id="[@indexerct]DTThoiGIanKT" class="form-control date-picker text-right" type="text" autocomplete="off" value="@item.ThoiGIanKT.Value.ToString("d")" /></td>
                                                <td>@Html.TextBox("[" + indexerct + "].ChucDanhCT", item.ChucDanhCT, new { @class = "form-control text-right" })</td>
