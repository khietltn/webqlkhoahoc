                                                                    @Html.EditorFor(model => model.DiaChiLienHe, new { htmlAttributes = new { @class = "form-control", @required = "reuqired" } })<br>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </li>
                                                    <li>
                                                        <div class="bg-light media border-bottom p-15">

                                                            <div class="form-group">
                                                                <div class="col-md-12">
                                                                    <span class="mt-0 mb-0 font-weight-600">Liên hệ:</span>
                                                                </div>
                                                                <div class="col-md-4" style="padding-right:0px">
                                                                    <span class="mt-0 mb-0 font-weight-600">Điện thoại:</span>
                                                                </div>
                                                                <div class="col-md-8">
                                                                    @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control", @required = "reuqired" } })<br>
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <span class="mt-0 mb-0 font-weight-600">Email:</span>
                                                                </div>
                                                                <div class="col-md-8">
                                                                    @Html.EditorFor(model => model.EmailLienHe, new { htmlAttributes = new { @class = "form-control", @required = "reuqired" } })<br>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <h4 class="line-bottom">Chuyên môn:</h4>
                                            <div class="volunteer-address">
                                                <div class="bg-light media border-bottom p-15 mb-20" style="overflow: visible">
                                                    <div class="form-group">
                                                        <h5 class="mt-0 mb-0 font-weight-600">Chức danh:</h5>
                                                        <p>
                                                            @Html.DropDownList("MaHocHam", (IEnumerable<SelectListItem>)ViewBag.MaHH, "--Chọn học hàm--", new { @class = "form-control" })
