                                    <input type="submit" value="Lưu" class="btn btn-primary btn-lg" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <hr style="border: 1px solid #F2184F !important;" />
                <a href="@Url.Action("Index","NhaKhoaHocs")" type="button" class="btn btn-danger btn-lg pull-right">Quay về</a>
            </section>
        </div>
    </div>
</section>
@section NhaKhoaHocScripts{
<script>
        var indexerjs = @indexer;
        var indexerjsct = @indexerct;
        var ma_phi_xoa = [];
        var ma_phi_xoa_js = [];
        var ma_phi_xoa_ct = [];
        var ma_phi_xoa_ct_js = [];
        $(document).ready(function () {
            $("#ThemQuaTrinhDaoTao").click(function () {
                $("#quatrinhdt tbody:last-child ").append(`  <tr>
                                                    <input name="[`+indexerjs+`].MaNKH" type="hidden" value="@Model.MaNKH" />
                                                    <td><input name="[`+ indexerjs + `].ThoiGianBD" id="[` + indexerjs + `]DTThoiGianBD" class="form-control date-picker text-right" type="text" autocomplete="off" value="" /></td>
                                                    <td><input name="[`+ indexerjs + `].ThoiGianKT" id="[` + indexerjs + `]DTThoiGianKT" class="form-control date-picker text-right" type="text" autocomplete="off" value="" /></td>
                                                    <td>@Html.DropDownList("s", new SelectList(db.BacDaoTaos, "MaBacDT", "TenBacDT"), new { @class = "form-control text-right", @id = "SelectListMaBacDaoTao" })</td>
                                                    <td><input class="form-control text-right" name="[`+ indexerjs +`].CoSoDaoTao" type="text" value="" /></td>
                                                    <td>@Html.DropDownList("s", new SelectList(db.NganhDaoTaos, "MaNganhDaoTao", "TenNganhDaoTao"), new { @class = "form-control text-right" , @id="SelectListMaNganhDaoTao"})</td>
                                                    <td><input name="[`+ indexerjs + `].NamTotNghiep" id="[` + indexerjs +`].NamTotNghiep" class="form-control date-picker text-right" type="text" autocomplete="off" value="" /></td>
                                                    <td><buton class="btn btn-danger" id="xoadaotao"><span class="glyphicon glyphicon-remove-sign"></span></buton></td>
                                                </tr>`);
                $("#SelectListMaBacDaoTao").attr('name', "[" + indexerjs + "].MaBacDT");
                $("#SelectListMaNganhDaoTao").attr('name', "[" + indexerjs + "].MaNganh");
                $("#SelectListMaBacDaoTao").removeAttr('id');
                $("#SelectListMaNganhDaoTao").removeAttr('id');
                indexerjs++;
                $(".date-picker").datepicker();
            });


            $('#quatrinhdt').on('click', '#xoadaotao', function () {
                var id = $(this).closest("tr").find("td:first input#MaQT").val();
                if (id != null) {
                    ma_phi_xoa.push(id);
                    $("#xoaquatrinhdaotao").val(JSON.stringify(ma_phi_xoa));
                    console.log($("#xoaquatrinhdaotao").val());
                }
                else {
                    var index = $(this).parents("tr").index("tr") - 1;
                    console.log($(this).parents("tr").index("tr")-1);
                    ma_phi_xoa_js.push(index);
                    $("#xoaquatrinhdaotaojs").val(JSON.stringify(ma_phi_xoa_js));
                }
                $(this).closest("tr").hide();
            });


            // Nếu add như thế sẽ không add động dược một khi chỉnh sửa database về khoa thì sẽ phải chỉnh front end lại -- fix sau

            $("#ThemQuaTrinhCongTac").click(function () {
                $("#quatrinhct tbody:last-child ").append(`<tr>
                                                <input name="[`+ indexerjsct + `].MaNKH" type="hidden" value="@Model.MaNKH" />
                                                <td><input name="[`+ indexerjsct + `].ThoiGianBD" id="ThoiGianBD" class="form-control date-picker text-right" type="text" autocomplete="off" value="" /></td>
                                                <td><input name="[`+ indexerjsct + `].ThoiGIanKT" id="ThoiGianKT" class="form-control date-picker text-right" type="text" autocomplete="off" value="" /></td>
                                                <td><input class="form-control text-right" name="[`+ indexerjsct + `].ChucDanhCT" type="text" value="" /></td>
                                                <td>@Html.DropDownList("s", new SelectList(db.DonViQLs, "MaDonVi", "TenDonVi"), new { @class = "form-control text-right", @id="SelectListDonViQuanLy" })</td >
                    <td><input class="form-control text-right" name="[`+ indexerjsct + `].ChucVuCT" type="text" value="" /></td>
                    <td><buton class="btn btn-danger" id="xoacongtac"><span class="glyphicon glyphicon-remove-sign"></span></buton></td>
                                            </tr >`);

                $("#SelectListDonViQuanLy").attr('name', "[" + indexerjsct + "].MaDonViQL");
                $("#SelectListDonViQuanLy").removeAttr('id');
                indexerjsct++;
                $(".date-picker").datepicker();
            });


            $('#quatrinhct').on('click', '#xoacongtac', function () {
                var id = $(this).closest("tr").find("td:first input#MaCT").val();
                if (id != null) {
                    ma_phi_xoa_ct.push(id);
                    $("#xoaquatrinhcongtac").val(JSON.stringify(ma_phi_xoa_ct));
                    console.log($("#xoaquatrinhcongtac").val());
                }
                else {
                    var index = $(this).closest("tr").index() - 2;
                    ma_phi_xoa_ct_js.push(index);
                    $("#xoaquatrinhcongtacjs").val(JSON.stringify(ma_phi_xoa_ct_js));
                }
                $(this).closest("tr").hide();
            });
        });
</script>
}