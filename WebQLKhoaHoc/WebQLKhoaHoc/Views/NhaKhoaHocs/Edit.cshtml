@using Microsoft.Ajax.Utilities
@using System.Data.Entity;
@model WebQLKhoaHoc.Models.NhaKhoaHocViewModel
@{ QLKhoaHocEntities db = new QLKhoaHocEntities(); }
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainPage.cshtml";
}

<style>
    .custom-tablebody tr td, th {
        text-align: right;
    }
</style>
<section class="">
    <div class="container">
        <div class="section-content">
            <!-- Section: Experts Details -->
            <section>
                @using (Html.BeginForm("Edit", "NhaKhoaHocs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.MaNKH)
                    <div class="container">
                        <div class="section-content">
                            <div class="row">
                                <div class="col-md-4">

                                    <div class="thumb">
                                        @{
                                            if (Model.AnhCaNhan.IsNullOrWhiteSpace())
                                            {
                                                <img class="img-fullwidth" id="thumbnail" src=@Url.Content("~/Image/avatar.bmp") style="max-height: 100vw; border-radius: 50%" />
                                            }
                                            else
                                            {
                                                <img class="img-fullwidth" id="thumbnail" src="@Model.AnhCaNhan" style="max-height: 100vw; border-radius: 50%" />
                                            }
                                        }

                                    </div>
                                    <div class="col-md-12 mt-20 text-center">
                                        @*@Html.LabelFor(model => model.AnhCaNhan, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                        <h5 class="mt-0 mb-0 font-weight-600">Ảnh cá nhân:</h5>
                                        <div class="col-md-10">
                                            <input type="file" accept="image/*" onchange="changeImage(this)" name="fileUpload" style="width: 100%;" />
                                        </div>
                                    </div>

                                    <script type="text/javascript">
                                        function changeImage(fileInput) {
                                            var files = fileInput.files;
                                            for (var i = 0; i < files.length; i++) {
                                                var file = files[i];
                                                var imageType = /image.*/;

                                                if (!file.type.match(imageType)) {
                                                    continue;
                                                }

                                                var img = document.getElementById("thumbnail");
                                                img.file = file;
                                                var reader = new FileReader();

                                                reader.onload = (function (aImg) {
                                                    return function (e) {
                                                        aImg.src = e.target.result;
                                                    };
                                                })(img);
                                                reader.readAsDataURL(file);
                                            }
                                        }
                                    </script>
                                </div>
                                <div class="col-md-8">
                                    <hr />
