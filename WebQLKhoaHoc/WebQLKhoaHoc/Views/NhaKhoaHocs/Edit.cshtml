                                                                    @Html.EditorFor(model => model.TenNKH, new { htmlAttributes = new { @class = "form-control", @required = "reuqired" } })<br>
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <span class="mt-0 mb-0 font-weight-600">Giới tính:</span>
                                                                </div>
                                                                <div class="col-md-8">
