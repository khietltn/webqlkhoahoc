                                                        <p>
                                                            @Html.DropDownList("MaDonViQL", (IEnumerable<SelectListItem>)ViewBag.MaDVQL, "--Chọn đơn vị--", new { @class = "form-control" })
                                                        </p>
                                                        <h5 class="mt-0 mb-0 font-weight-600">Ngạch viên chức:</h5>
                                                        <p>
                                                            @Html.DropDownList("MaNgachVienChuc", (IEnumerable<SelectListItem>)ViewBag.MaNgachVC, "--Chọn ngạch--", new { @class = "form-control" })
                                                        </p>
                                                        <h5 class="mt-0 mb-0 font-weight-600">Chuyên Môn Giảng Dạy:</h5>
                                                        <p>
                                                            @Html.ListBox("DSChuyenMonGD", ViewBag.DSChuyenMonGiangDay as MultiSelectList, new { @class = "listbox" })
                                                        </p>
                                                        <h5 class="mt-0 mb-0 font-weight-600">Lĩnh Vực Nghiên Cứu:</h5>
                                                        <p>
                                                            @Html.ListBox("DSLinhVucNC", ViewBag.DSLinhVucNghienCuu as MultiSelectList, new { @class = "listbox" })
                                                        </p>
                                                        <h5 class="mt-0 mb-0 font-weight-600">Trình Độ Ngoại Ngữ:</h5>
                                                        <p>
                                                            @Html.ListBox("DSTrinhDoNN", ViewBag.DSTrinhDoNgoaiNgu as MultiSelectList, new { @class = "listbox" })
                                                        </p>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="modal-footer">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-primary" />

                                    </div>
                                </div>
                            </div>
                            <hr />
                        </div>
                    </div>
                }
                @{ int indexer = 0;}
                @using (Html.BeginForm("EditQuaTrinhDT", "NhaKhoaHocs", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.MaNKH)
                    <div class="form-group">
                        <div class="row">
                            <h2 class="tile text-center text-black-444 border-bottom-theme-color-2-2px" style="padding-bottom: 5px;"> Quá trình công tác và đào tạo</h2>
                            <div class="col-md-12">
                                <table class="table table-bordered table-striped" id="quatrinhdt">
                                    <thead class="custom-tablebody">
                                        <tr>
                                            <th>Thời gian bắt đầu</th>
                                            <th>Thời gian kết thúc</th>
                                            <th>Bậc đào tạo</th>
                                            <th>Cơ sở đào tạo</th>
                                            <th>Ngành đào tạo</th>
                                            <th>Năm tốt nghiệp</th>
                                            <th><button class="btn btn-success btn-lg" id="ThemQuaTrinhDaoTao" type="button"><span class="glyphicon glyphicon-plus-sign"></span></button></th>
                                        </tr>
                                    </thead>
                                    <tbody class="custom-tablebody">

                                        @foreach (var item in Model.QuaTrinhDaoTaos)
                                        {
                                            <tr>
                                                <td style="display:none;">@Html.Hidden("[" + indexer + "].MaQT", item.MaQT, new { @id = "MaQT" })</td>
                                                <td style="display:none;">@Html.Hidden("[" + indexer + "].MaNKH", item.MaNKH)</td>
                                                <td><input name="[@indexer].ThoiGianBD" id="[@indexer].ThoiGianBD" class="form-control date-picker text-right" type="text" autocomplete="off" value="@item.ThoiGianBD.Value.ToString("d")" /></td>
                                                <td><input name="[@indexer].ThoiGianKT" id="[@indexer].ThoiGianKT" class="form-control date-picker text-right" type="text" autocomplete="off" value="@item.ThoiGianKT.Value.ToString("d")" /></td>
                                                <td>@Html.DropDownList("[" + indexer + "].MaBacDT", new SelectList(db.BacDaoTaos, "MaBacDT", "TenBacDT", item.MaBacDT), new { @class = "form-control text-right" })</td>
                                                <td>@Html.TextBox("[" + indexer + "].CoSoDaoTao", item.CoSoDaoTao, new { @class = "form-control text-right" })</td>
                                                <td>@Html.DropDownList("[" + indexer + "].MaNganh", new SelectList(db.NganhDaoTaos, "MaNganhDaoTao", "TenNganhDaoTao", item.MaNganh), new { @class = "form-control text-right" })</td>
                                                <td><input name="[@indexer].NamTotNghiep" id="[@indexer].NamTotNghiep" class="form-control date-picker text-right" type="text" autocomplete="off" value="@item.NamTotNghiep.Value.ToString("d")" /></td>
                                                <td><buton class="btn btn-danger" id="xoadaotao"><span class="glyphicon glyphicon-remove-sign"></span></buton></td>
                                            </tr>
                                            indexer++;
                                        }
                                        <input name="xoaquatrinhdaotao" type="hidden" id="xoaquatrinhdaotao" class="form-control" />
                                        <input name="xoaquatrinhdaotaojs" type="hidden" id="xoaquatrinhdaotaojs" class="form-control" />
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="modal-footer" style="border-top:0 !important;">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Lưu" class="btn btn-primary btn-lg" />
                                </div>
                            </div>
                        </div>
                    </div>
                }
                <hr />
                @{ int indexerct = 0;}
                @using (Html.BeginForm("EditQuaTrinhCT", "NhaKhoaHocs", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.MaNKH)
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-12">
                                <table class="table table-bordered" id="quatrinhct">
                                    <thead class="custom-tablebody">
                                        <tr>
                                            <th>Thời gian bắt đầu</th>
                                            <th>Thời gian kết thúc</th>
                                            <th>Chức danh công tác</th>
