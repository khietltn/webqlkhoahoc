                                                                    <span class="mt-0 mb-0 font-weight-600">Họ:</span>
                                                                </div>
                                                                <div class="col-md-8">
                                                                    @Html.EditorFor(model => model.HoNKH, new { htmlAttributes = new { @class = "form-control", @required = "reuqired" } })<br>
                                                                </div>
