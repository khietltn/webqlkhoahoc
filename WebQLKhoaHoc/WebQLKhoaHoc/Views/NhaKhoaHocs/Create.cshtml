@model WebQLKhoaHoc.NhaKhoaHoc

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainPage.cshtml";
}

<h2>Create</h2>
<section class="">
    <div class="container">
        <div class="section-content">
            <!-- Section: Experts Details -->
            <section>
                @using (Html.BeginForm("Create", "NhaKhoaHocs", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.MaNKH)
                    <div class="container">
                        <div class="section-content">
                            <div class="row">
                                <div class="col-md-4">

                                    <div class="thumb">
                                      
                                                <img class="img-fullwidth" id="thumbnail" src=@Url.Content("~/Image/avatar.bmp") style="max-height: 100vw; border-radius: 50%" />
                                           
                                         

                                    </div>
                                    <div class="col-md-12 mt-20 text-center">
                                        @*@Html.LabelFor(model => model.AnhCaNhan, htmlAttributes: new { @class = "control-label col-md-2" })*@
                                        <h5 class="mt-0 mb-0 font-weight-600">Ảnh cá nhân:</h5>
                                        <div class="col-md-10">
                                            <input type="file" accept="image/*" onchange="changeImage(this)" name="fileUpload" style="width: 100%;" />
                                        </div>
                                    </div>

                                    <script type="text/javascript">
                                        function changeImage(fileInput) {
                                            var files = fileInput.files;
                                            for (var i = 0; i < files.length; i++) {
                                                var file = files[i];
                                                var imageType = /image.*/;

                                                if (!file.type.match(imageType)) {
                                                    continue;
                                                }

                                                var img = document.getElementById("thumbnail");
                                                img.file = file;
                                                var reader = new FileReader();

                                                reader.onload = (function (aImg) {
                                                    return function (e) {
                                                        aImg.src = e.target.result;
                                                    };
                                                })(img);
                                                reader.readAsDataURL(file);
                                            }
                                        }
                                    </script>
                                </div>
                                <div class="col-md-8">
                                    <hr />
                                    <div class="row">
                                        <div class="col-md-6">
                                            <h4 class="line-bottom">Thông tin:</h4>
                                            <div class="volunteer-address">
                                                <ul>
                                                    <li>
                                                        <div class="bg-light media border-bottom p-15 mb-20">

                                                            <div class="form-group">
                                                                <div class="col-md-4">
                                                                    <span class="mt-0 mb-0 font-weight-600">Họ:</span>
                                                                </div>
                                                                <div class="col-md-8">
                                                                    @Html.EditorFor(model => model.HoNKH, new { htmlAttributes = new { @class = "form-control", @required = "reuqired" } })<br>
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <span class="mt-0 mb-0 font-weight-600">Tên:</span>
                                                                </div>
                                                                <div class="col-md-8">
                                                                    @Html.EditorFor(model => model.TenNKH, new { htmlAttributes = new { @class = "form-control", @required = "reuqired" } })<br>
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <span class="mt-0 mb-0 font-weight-600">Giới tính:</span>
                                                                </div>
                                                                <div class="col-md-8">
                                                                    <select class="form-control">
                                                                        <option>Nam</option>
                                                                        <option>Nữ</option>
                                                                    </select>
                                                                    <br>
                                                                </div>
                                                                <div class="col-md-4" style="padding-right:0px">
                                                                    <span class="mt-0 mb-0 font-weight-600">Ngày sinh</span>
                                                                </div>
                                                                <div class="col-md-8">
                                                                    <input name="NamBD" id="Fromdate" class="form-control date-picker" type="text" placeholder="Năm sinh" value="@Model.NgaySinh.Value.ToString("d") " autocomplete="off">
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </li>
                                                    <li>
                                                        <div class="bg-light media border-bottom p-15 mb-20">

                                                            <div class="form-group">
                                                                <div class="col-md-4">
                                                                    <span class="mt-0 mb-0 font-weight-600">Địa chỉ:</span>
                                                                </div>
                                                                <div class="col-md-8">
                                                                    @Html.EditorFor(model => model.DiaChiLienHe, new { htmlAttributes = new { @class = "form-control", @required = "reuqired" } })<br>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </li>
                                                    <li>
                                                        <div class="bg-light media border-bottom p-15">

                                                            <div class="form-group">
                                                                <div class="col-md-12">
                                                                    <span class="mt-0 mb-0 font-weight-600">Liên hệ:</span>
                                                                </div>
                                                                <div class="col-md-4" style="padding-right:0px">
                                                                    <span class="mt-0 mb-0 font-weight-600">Điện thoại:</span>
                                                                </div>
                                                                <div class="col-md-8">
                                                                    @Html.EditorFor(model => model.DienThoai, new { htmlAttributes = new { @class = "form-control", @required = "reuqired" } })<br>
                                                                </div>
                                                                <div class="col-md-4">
                                                                    <span class="mt-0 mb-0 font-weight-600">Email:</span>
                                                                </div>
                                                                <div class="col-md-8">
                                                                    @Html.EditorFor(model => model.EmailLienHe, new { htmlAttributes = new { @class = "form-control", @required = "reuqired" } })<br>
                                                                </div>
                                                            </div>
                                                        </div>

                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <h4 class="line-bottom">Chuyên môn:</h4>
                                            <div class="volunteer-address">
                                                <div class="bg-light media border-bottom p-15 mb-20" style="overflow: visible">
                                                    <div class="form-group">
                                                        <h5 class="mt-0 mb-0 font-weight-600">Chức danh:</h5>
                                                        <p>
                                                            @Html.DropDownList("MaHocHam", (IEnumerable<SelectListItem>)ViewBag.MaHH, "--Chọn học hàm--", new { @class = "form-control" })
                                                        </p>
                                                        <h5 class="mt-0 mb-0 font-weight-600">Học vị:</h5>
                                                        <p>
                                                            @Html.DropDownList("MaHocVi", (IEnumerable<SelectListItem>)ViewBag.MaHV, "--Chọn học vị--", new { @class = "form-control" })
                                                        </p>
                                                        <h5 class="mt-0 mb-0 font-weight-600">Chuyên ngành đào tạo:</h5>
                                                        <p>
                                                            @Html.DropDownList("MaCNDaoTao", (IEnumerable<SelectListItem>)ViewBag.MaCNDT, "--Chọn chuyên ngành--", new { @class = "form-control" })
                                                        </p>
                                                        <h5 class="mt-0 mb-0 font-weight-600">Đơn vị quản lý:</h5>
                                                        <p>
                                                            @Html.DropDownList("MaDonViQL", (IEnumerable<SelectListItem>)ViewBag.MaDVQL, "--Chọn đơn vị--", new { @class = "form-control" })
                                                        </p>
                                                        <h5 class="mt-0 mb-0 font-weight-600">Ngạch viên chức:</h5>
                                                        <p>
                                                            @Html.DropDownList("MaNgachVienChuc", (IEnumerable<SelectListItem>)ViewBag.MaNgachVC, "--Chọn ngạch--", new { @class = "form-control" })
                                                        </p>
                                                        <h5 class="mt-0 mb-0 font-weight-600">Chuyên Môn Giảng Dạy:</h5>
                                                        <p>
                                                            @Html.ListBox("DSChuyenMonGD", ViewBag.DSChuyenMonGiangDay as MultiSelectList, new { @class = "listbox" })
                                                        </p>
                                                        <h5 class="mt-0 mb-0 font-weight-600">Lĩnh Vực Nghiên Cứu:</h5>
                                                        <p>
                                                            @Html.ListBox("DSLinhVucNC", ViewBag.DSLinhVucNghienCuu as MultiSelectList, new { @class = "listbox" })
                                                        </p>
                                                        <h5 class="mt-0 mb-0 font-weight-600">Trình Độ Ngoại Ngữ:</h5>
                                                        <p>
                                                            @Html.ListBox("DSTrinhDoNN", ViewBag.DSTrinhDoNgoaiNgu as MultiSelectList, new { @class = "listbox" })
                                                        </p>
                                                    </div>
                                                </div>

                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <div class="modal-footer">
                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                        <a href="@Url.Action("Index","NhaKhoaHocs")" type="button" class="btn btn-danger">Đóng</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </section>

        </div>
    </div>
</section>
