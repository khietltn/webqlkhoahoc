                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.NVNCTNDT > 0)
                                                    {
                                                        @item.NVNCTNDT
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.GDBVMT > 0)
                                                    {
                                                        @item.GDBVMT
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.DTTDCB > 0)
                                                    {
                                                        @item.DTTDCB
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.DASXTNCB > 0)
                                                    {
                                                        @item.DASXTNCB
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.DTCDHH > 0)
                                                    {
                                                        @item.DTCDHH
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.Sum > 0)
                                                    {
                                                        @item.Sum
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>

                                            </tr>
                                            stt++;
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    @{

                        List<List<Object>> data1 = GoogleChartData(db, 10, 0);
                        List<List<Object>> data2 = GoogleChartData(db, 10, 10);
                        List<List<Object>> data3 = GoogleChartData(db, 10, 20);
                        List<List<Object>> data4 = GoogleChartData(db, 9, 30);

                    }
