                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.DTCCS > 0)
                                                    {
                                                        @item.DTCCS
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.DAHTQT > 0)
                                                    {
                                                        @item.DAHTQT
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.DASXTNCNN > 0)
                                                    {
                                                        @item.DASXTNCNN
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.DTDLCNN > 0)
                                                    {
                                                        @item.DTDLCNN
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.DTTCTDTCNN > 0)
                                                    {
                                                        @item.DTTCTDTCNN
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.DATCTTDCNN > 0)
                                                    {
                                                        @item.DATCTTDCNN
                                                    }
                                                    else
                                                    {
                                                        <span>-</span>
                                                    }
                                                </td>
                                                <td class="text-center">
                                                    @if (item.NCCB > 0)
                                                    {
                                                        @item.NCCB
