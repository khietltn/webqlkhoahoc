                        <div class="panel-body">
                            <div id="topicsChart1"></div>
                        </div>
                    </div>
                    <div class="panel">
                        <div class="panel-body">
                            <div id="topicsChart2"></div>
                        </div>
                    </div>
                    <div class="panel">
                        <div class="panel-body">
                            <div id="topicsChart3"></div>
                        </div>
                    </div>
                    <div class="panel">
                        <div class="panel-body">
                            <div id="topicsChart4"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

@section charts{
    <script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
    @Scripts.Render("~/bundles/charts")
    <script type="text/javascript">
        $(document).ready(function () {
            var json_data1 = $('#data1').val();
            var json_data2 = $('#data2').val();
            var json_data3 = $('#data3').val();
            var json_data4 = $('#data4').val();
            googleChart(json_data1, 'topicsChart1');
            googleChart(json_data2, 'topicsChart2');
            googleChart(json_data3, 'topicsChart3');
            googleChart(json_data4, 'topicsChart4');
        });
    </script>
}



