@model WebQLKhoaHoc.SachGiaoTrinh

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminMainPage.cshtml";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h1 class="text-center">Sách giáo trình</h1>
        <hr />
        <div class="row">
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model=>model.MaSach)
            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Mã ISBN:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="MaISBN" value="@Model.MaISBN"/>
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Tên sách:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="TenSach" value="@Model.TenSach"/>
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Năm xuất bản:</h4>
                <div class="col-md-7">
                    <input required class="form-control" name="NamXuatBan" value="@Model.NamXuatBan" />
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Lĩnh vực sách:</h4>
                <div class="col-md-7">
                    @Html.DropDownList("MaLinhVuc", ViewBag.MaLinhVuc as SelectList, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Lĩnh vực đề tài:</h4>
                <div class="col-md-7">
                    @Html.DropDownList("MaNXB", ViewBag.MaNXB as SelectList, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <h4 class="col-md-2 col-md-offset-1">Lĩnh vực đề tài:</h4>
                <div class="col-md-7">
                    @Html.DropDownList("MaLoai", ViewBag.MaLoai as SelectList, new { @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-3 col-md-7">
                    @Html.ActionLink("Trở về", "Index", "AdminDeTai", null, new { @class = "pull-right btn btn-default" })
                    <input type="submit" value="Create" class="btn btn-default pull-right" />
                </div>
            </div>
        </div>
    </div>
}


